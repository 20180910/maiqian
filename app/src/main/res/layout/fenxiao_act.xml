<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
<include layout="@layout/app_title"/>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@id/pcfl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_resistance="2.1"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        >
        <com.library.base.ProgressLayout
            android:id="@id/pl_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.NestedScrollView
                    android:id="@id/nsv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <!--your view-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="bottom|center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/iv_fenxiao"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            tools:src="@drawable/saoyisao"
                            android:layout_marginTop="45dp"
                            />
                        <TextView
                            android:id="@+id/tv_fenxiao_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1234123213"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_fenxiao_content"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            tools:text="将此分销码分享给好友,好友注册时填写你的分销号,你即可获得积分"
                            />
                        <com.github.customview.MyTextView
                            android:id="@+id/tv_fenxiao_yaoqing"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:text="分享好友"
                            android:gravity="center"
                            app:my_tv_solid="@color/blue_00"
                            app:my_tv_press="@color/blue_press"
                            android:textColor="@color/white"
                            app:my_tv_corner_radius="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的下级"
                        android:textSize="17sp"
                        android:layout_margin="10dp"
                        android:paddingTop="20dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/background_f2"
                        />
                    <com.library.base.view.MyRecyclerView
                        android:id="@+id/rv_fenxiao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    </com.library.base.view.MyRecyclerView>
                </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

        </com.library.base.ProgressLayout>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>