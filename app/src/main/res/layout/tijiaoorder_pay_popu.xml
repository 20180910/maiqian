<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_f2"
    >
    <com.github.customview.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:my_ll_solid="@color/white"
        app:my_ll_corner_radius="4dp"
        android:gravity="center_vertical"
        android:paddingBottom="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式"
            android:layout_gravity="center_horizontal"
            android:layout_margin="13dp"
            android:textColor="@color/gray_33"
            android:textSize="15sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/background_f2"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <com.github.customview.MyRadioButton
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:my_radio_checked="@drawable/yingyupeixun_zhifufangshi_icon_select"
                app:my_radio_normal="@drawable/yingyupeixun_zhifufangshi_icon_normal"
                app:my_radio_checked_drawable="right"
                android:button="@drawable/pay_wx"
                android:text="微信支付"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
            <com.github.customview.MyRadioButton
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:my_radio_checked="@drawable/yingyupeixun_zhifufangshi_icon_select"
                app:my_radio_normal="@drawable/yingyupeixun_zhifufangshi_icon_normal"
                app:my_radio_checked_drawable="right"
                android:button="@drawable/pay_ali"
                android:text="微信支付"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/background_f2"
            />
        <com.github.customview.MyTextView
            android:id="@+id/tv_commit_liuyan"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="确认"
            android:gravity="center"
            app:my_tv_solid="@color/blue_00"
            app:my_tv_press="@color/blue_press"
            android:textColor="@color/white"
            app:my_tv_corner_radius="4dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            />
    </com.github.customview.MyLinearLayout>
</LinearLayout>