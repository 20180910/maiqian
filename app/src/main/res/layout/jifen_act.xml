<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
    <include layout="@layout/app_title"/>
   <!-- <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_f2"
            >
            <!--your view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@color/blue_00"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="11111积分"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    />
                <com.github.customview.MyTextView
                    android:id="@+id/tv_jifen_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="提现"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    app:my_tv_border_color="@color/white"
                    app:my_tv_all_line="true"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    app:my_tv_corner_radius="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="2px"
                >
                <TextView
                    android:id="@+id/tv_jifen_shuoming"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="积分说明"
                    android:gravity="center"
                    android:drawableTop="@drawable/jifenshuoming"
                    android:drawablePadding="10dp"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/background_f2"
                    />
                <TextView
                    android:id="@+id/tv_jifen_zhuanjifen"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="赚积分"
                    android:gravity="center"
                    android:drawableTop="@drawable/zhuanjifen"
                    android:drawablePadding="10dp"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/background_f2"
                    />
                <TextView
                    android:id="@+id/tv_jifen_mingxi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="明细"
                    android:gravity="center"
                    android:drawableTop="@drawable/mingxi"
                    android:drawablePadding="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
    <!--</com.library.base.ProgressLayout>-->
</LinearLayout>