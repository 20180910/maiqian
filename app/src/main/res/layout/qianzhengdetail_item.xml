<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center_horizontal"
            >
            <com.github.customview.MyTextView
                android:id="@+id/tv_qianzheng_detail_item_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                tools:text="5"
                app:my_tv_solid="#FFC820"
                app:my_tv_corner_radius="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_qianzheng_detail_item_line"
                android:layout_width="2px"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFC820"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_qianzheng_detail_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="材料审核及送达"
                android:layout_marginBottom="3dp"
                android:textColor="@color/gray_33"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_qianzheng_detail_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="根据您实际出行时间根据您实际出行时间根据您实际出行时间根据您实际出行时间根据您实际出行时间根据您实际出行时间根据您实际出行时间根据您实际出行时间根据您实际出行时间根据您实际出行时间，在线选择对应签证产品进行支付"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>