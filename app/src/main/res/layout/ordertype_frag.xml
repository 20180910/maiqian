<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background_f2"
            >
            <!--your view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white"
                >
                <com.github.customview.MyTextView
                    android:id="@+id/tv_order_qianzheng"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:text="签证代办"
                    android:gravity="center"
                    app:my_tv_solid="@color/blue_00"
                    android:textColor="@color/white"
                    app:my_tv_corner_radius="15dp"
                    />
                <com.github.customview.MyTextView
                    android:id="@+id/tv_order_peixun"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    app:my_tv_solid="@color/white"
                    android:textColor="@color/blue_00"
                    app:my_tv_corner_radius="15dp"
                    android:text="英语培训"
                    app:my_tv_border_color="@color/blue_00"
                    app:my_tv_border_width="2px"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>
    </com.library.base.ProgressLayout>
</LinearLayout>