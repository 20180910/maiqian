<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:padding="10dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/iv_teacher_item_img"
                    android:layout_width="@dimen/img_w"
                    android:layout_height="@dimen/img_h"
                    tools:src="@drawable/item_img"
                    android:scaleType="fitCenter"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                >
                <TextView
                    android:id="@+id/tv_teacher_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游春节出境游"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/gray_33"
                    android:layout_marginTop="2dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/tv_teacher_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="¥121210"
                        android:textColor="@color/blue_00"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/tv_teacher_item_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="¥1212"
                        android:textColor="@color/gray_99"
                        android:textSize="10sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_marginTop="1dp"
                    >
                    <TextView
                        android:id="@+id/tv_teacher_item_title_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="口语"
                        android:textSize="11sp"
                        android:textColor="@color/gray_99"
                        />
                   <!-- <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_f2"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正式课"
                        android:textSize="11sp"
                        android:textColor="@color/gray_99"
                        />
                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_f2"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1对1"
                        android:textSize="11sp"
                        android:textColor="@color/gray_99"
                        />-->
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_teacher_item_peoplenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="已有100人预约申请"
                    android:textSize="11sp"
                    android:textColor="@color/gray_99"
                    android:layout_marginTop="1dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>