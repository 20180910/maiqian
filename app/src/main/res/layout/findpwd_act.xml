<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <!--your view-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="30dp"
                >
                <com.github.customview.MyEditText
                    android:id="@+id/et_findpwd_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    app:my_et_solid="@color/white"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:drawableLeft="@drawable/zhuce_icon01"
                    android:hint="请输入手机号"
                    android:drawablePadding="15dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/background_f2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <com.github.customview.MyEditText
                        android:id="@+id/et_findpwd_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        app:my_et_solid="@color/white"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:drawableLeft="@drawable/zhuce_icon02"
                        android:hint="点击填写验证码"
                        android:drawablePadding="15dp"
                        android:layout_marginRight="10dp"
                        />
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_findpwd_getmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"
                        android:padding="5dp"
                        app:my_tv_solid="@color/blue_00"
                        android:ems="5"
                        android:gravity="center"
                        app:my_tv_all_line="true"
                        app:my_tv_corner_radius="4dp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/background_f2"
                    />
                <com.github.customview.MyTextView
                    android:id="@+id/tv_findpwd_next"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="下一步"
                    android:gravity="center"
                    app:my_tv_solid="@color/blue_00"
                    app:my_tv_press="@color/blue_press"
                    android:textColor="@color/white"
                    app:my_tv_corner_radius="4dp"
                    android:layout_marginTop="50dp"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.library.base.ProgressLayout>
</LinearLayout>